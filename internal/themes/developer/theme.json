{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "name": "Developer",
    "version": "1.0.0",
    "author": "oCMS",
    "description": "Dark theme for developers and technical blogs",
    "screenshot": "screenshot.svg",
    "templates": {
        "home": "pages/home.html",
        "page": "pages/page.html",
        "list": "pages/list.html",
        "404": "pages/404.html",
        "category": "pages/category.html",
        "tag": "pages/tag.html",
        "search": "pages/search.html"
    },
    "settings": [
        {
            "key": "favicon",
            "label": "Favicon",
            "type": "image",
            "default": ""
        },
        {
            "key": "accent_color",
            "label": "Accent Color",
            "type": "color",
            "default": "#10b981"
        },
        {
            "key": "code_theme",
            "label": "Code Highlighting Theme",
            "type": "select",
            "default": "monokai",
            "options": ["monokai", "github-dark", "dracula", "nord"]
        },
        {
            "key": "show_line_numbers",
            "label": "Show Line Numbers in Code",
            "type": "select",
            "default": "yes",
            "options": ["yes", "no"]
        },
        {
            "key": "show_hero_text",
            "label": "Show Hero Text",
            "type": "select",
            "default": "yes",
            "options": ["yes", "no"]
        },
        {
            "key": "hero_image",
            "label": "Hero Image",
            "type": "image",
            "default": ""
        },
        {
            "key": "hero_image_alt",
            "label": "Hero Image Alt Text",
            "type": "text",
            "default": ""
        }
    ],
    "widget_areas": [
        {
            "id": "sidebar",
            "name": "Sidebar",
            "description": "Widgets displayed in the sidebar"
        },
        {
            "id": "footer",
            "name": "Footer",
            "description": "Widgets displayed in the footer area"
        }
    ]
}
